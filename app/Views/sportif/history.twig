{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="max-w-6xl mx-auto p-8">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">Mon historique de réservations</h1>
        <span class="bg-indigo-100 text-indigo-700 px-4 py-1 rounded-full text-sm font-medium">
            {{ reservations|length }} séance(s)
        </span>
    </div>

    {% if reservations is empty %}
        <div class="bg-gray-50 border-2 border-dashed border-gray-200 rounded-xl p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="mt-4 text-lg text-gray-600">Vous n'avez pas encore de réservations.</p>
            <a href="/coaches" class="mt-6 inline-block bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition">Réserver un coach</a>
        </div>
    {% else %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for r in reservations %}
                <div class="group bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden">
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex items-center space-x-3">
                                <div class="h-10 w-10 rounded-full bg-indigo-500 flex items-center justify-center text-white font-bold">
                                    {{ r.prenom|first }}{{ r.nom|first }}
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-900">{{ r.prenom }} {{ r.nom }}</h3>
                                    <p class="text-xs text-gray-500 uppercase tracking-wider font-semibold">Coach Sportif</p>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-3 pt-4 border-t border-gray-50">
                            <div class="flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                <span class="text-sm">{{ r.date_seance|date("d M Y") }}</span>
                            </div>
                            <div class="flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="text-sm">{{ r.heure|date("H:i") }}</span>
                            </div>
                        </div>
                    </div>
                    
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
