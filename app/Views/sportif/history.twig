{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="max-w-6xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Historique des réservations</h1>

    {% if reservations is empty %}
        <p>Aucune réservation.</p>
    {% else %}
        <ul class="space-y-3">
            {% for r in reservations %}
                <li class="border p-4 rounded">
                    <strong>Coach :</strong> {{ r.nom }} {{ r.prenom }}<br>
                    <strong>Date :</strong> {{ r.date_seance }}<br>
                    <strong>Heure :</strong> {{ r.heure_debut }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
