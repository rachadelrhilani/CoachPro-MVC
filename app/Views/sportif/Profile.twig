{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="min-h-screen py-12 px-4">
    <div class="max-w-2xl mx-auto">
        
        {% if session.flash.success is defined %}
            <div class="mb-6 flex items-center p-4 bg-emerald-50 border-l-4 border-emerald-500 text-emerald-700 rounded-r-xl shadow-sm animate-bounce-short">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="font-medium">{{ session.flash.success }}</span>
            </div>
        {% endif %}

        <div class="bg-white rounded-[2.5rem] shadow-2xl shadow-indigo-100 overflow-hidden border border-slate-100">
            <div class="relative h-32 bg-gradient-to-r from-indigo-600 to-purple-600">
                <div class="absolute -bottom-12 left-8">
                    <div class="w-24 h-24 bg-white rounded-3xl shadow-lg flex items-center justify-center p-1">
                        <div class="w-full h-full bg-slate-100 rounded-2xl flex items-center justify-center text-indigo-600 text-3xl font-bold border border-slate-50">
                            {{ sportif.prenom|slice(0, 1)|upper }}{{ sportif.nom|slice(0, 1)|upper }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-16 pb-10 px-8 md:px-12">
                <div class="mb-8">
                    <h1 class="text-3xl font-black text-slate-800 tracking-tight">Mon profil</h1>
                    <p class="text-slate-500 text-sm mt-1">Gérez vos informations personnelles en un clic.</p>
                </div>

                <form id="sportif-profile-form" method="POST"  action="{{ base_url }}/sportif/profile/update" class="space-y-6">
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label class="text-sm font-bold text-slate-700 ml-1">Nom</label>
                            <div class="relative group">
                                <input type="text" name="nom" value="{{ sportif.nom }}" 
                                    class="w-full pl-4 pr-4 py-3 bg-slate-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50 transition-all duration-300 outline-none text-slate-600 font-medium"
                                    placeholder="Votre nom">
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="text-sm font-bold text-slate-700 ml-1">Prénom</label>
                            <div class="relative group">
                                <input type="text" name="prenom" value="{{ sportif.prenom }}" 
                                    class="w-full pl-4 pr-4 py-3 bg-slate-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50 transition-all duration-300 outline-none text-slate-600 font-medium"
                                    placeholder="Votre prénom">
                            </div>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-bold text-slate-700 ml-1">Adresse Email</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <input type="email" name="email" value="{{ sportif.email }}" 
                                class="w-full pl-12 pr-4 py-3 bg-slate-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50 transition-all duration-300 outline-none text-slate-600 font-medium"
                                placeholder="votre@email.com">
                        </div>
                    </div>

                    <div class="pt-4">
                        <button class="w-full md:w-auto px-10 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-2xl shadow-lg shadow-indigo-200 hover:shadow-indigo-400 hover:scale-[1.02] active:scale-95 transition-all duration-300">
                            Enregistrer les modifications
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes bounce-short {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); }
    }
    .animate-bounce-short {
        animation: bounce-short 2s ease-in-out infinite;
    }
</style>
<script>
document.addEventListener('DOMContentLoaded', () => {

    const form = document.querySelector('form');
    if (!form) return;

    form.addEventListener('submit', function (e) {
        let errors = [];

        // Helpers
        const get = name => form.querySelector(`[name="${name}"]`);
        const markError = input => {
            input.classList.add('ring-2', 'ring-red-500');
        };
        const clearError = input => {
            input.classList.remove('ring-2', 'ring-red-500');
        };

        // Reset styles
        form.querySelectorAll('input, textarea').forEach(clearError);

        // Champs communs
        const nom = get('nom');
        const prenom = get('prenom');
        const email = get('email');

        if (nom && nom.value.trim().length < 2) {
            errors.push('Le nom doit contenir au moins 2 caractères.');
            markError(nom);
        }

        if (prenom && prenom.value.trim().length < 2) {
            errors.push('Le prénom doit contenir au moins 2 caractères.');
            markError(prenom);
        }

        if (email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)) {
            errors.push('Adresse email invalide.');
            markError(email);
        }

        // Champs Coach uniquement (si présents)
        const discipline = get('discipline');
        const experience = get('annees_experience');
        const description = get('description');

        if (discipline && discipline.value.trim() === '') {
            errors.push('La discipline est obligatoire.');
            markError(discipline);
        }

        if (experience && (experience.value < 0 || experience.value === '')) {
            errors.push('Les années d’expérience doivent être valides.');
            markError(experience);
        }

        if (description && description.value.trim().length < 10) {
            errors.push('La description doit contenir au moins 10 caractères.');
            markError(description);
        }

        // Stop submit si erreurs
        if (errors.length > 0) {
            e.preventDefault();
            alert(errors.join('\n'));
        }
    });

});

</script>