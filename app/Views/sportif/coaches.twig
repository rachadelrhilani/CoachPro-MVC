{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="min-h-screen py-16">
    <div class="max-w-7xl mx-auto px-6">
        
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-6">
            <div>
                <span class="text-indigo-600 font-bold tracking-widest uppercase text-xs">Nos Experts</span>
                <h1 class="text-5xl font-black text-slate-900 mt-2">
                    Liste des <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">coachs</span>
                </h1>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for coach in coaches %}
                <div class="group relative bg-white rounded-[2rem] p-2 transition-all duration-500 hover:shadow-[0_20px_50px_rgba(79,70,229,0.15)] hover:-translate-y-2">
                    
                    <div class="bg-white border border-slate-100 rounded-[1.8rem] p-6 h-full flex flex-col">
                        
                        <div class="flex justify-between items-start mb-6">
                            <div class="relative">
                                <div class="w-20 h-20 bg-gradient-to-tr from-indigo-600 to-purple-600 rounded-2xl flex items-center justify-center text-white text-2xl font-bold rotate-3 group-hover:rotate-0 transition-transform duration-500 shadow-lg shadow-indigo-200">
                                    {{ coach.prenom|slice(0, 1)|upper }}{{ coach.nom|slice(0, 1)|upper }}
                                </div>
                                <div class="absolute -bottom-2 -right-2 bg-emerald-500 w-6 h-6 rounded-full border-4 border-white"></div>
                            </div>
                            <span class="px-3 py-1 bg-slate-50 text-slate-400 text-[10px] font-bold uppercase rounded-full border border-slate-100">
                                #{{ loop.index }} Expert
                            </span>
                        </div>

                        <div class="flex-1">
                            <h2 class="text-2xl font-extrabold text-slate-800 mb-1 group-hover:text-indigo-600 transition-colors">
                                {{ coach.prenom }} {{ coach.nom }}
                            </h2>
                            <p class="text-indigo-500 font-semibold text-sm mb-4 italic">
                                {{ coach.discipline }}
                            </p>
                            
                            <p class="text-slate-600 line-clamp-3 text-sm leading-relaxed mb-6">
                                {{ coach.description }}
                            </p>
                        </div>

                        <div class="pt-6 border-t border-slate-50 flex items-center justify-between">
                            <div class="flex flex-col">
                                <span class="text-[10px] text-slate-400 uppercase font-bold tracking-tight">Expérience</span>
                                <span class="text-slate-700 font-bold">{{ coach.annees_experience }} ans</span>
                            </div>
                            
                        </div>
                    </div>
                    
                    <div class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-500 -z-10 rounded-[2rem] opacity-0 group-hover:opacity-10 blur-xl transition-opacity"></div>
                </div>
            {% else %}
                <div class="col-span-full bg-white rounded-[2rem] border-2 border-dashed border-slate-200 p-16 text-center">
                    <div class="bg-slate-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300">
                        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-slate-800">Aucun coach trouvé</h3>
                    <p class="text-slate-500">Revenez plus tard pour voir nos nouveaux coachs.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    /* smooth scrolling pour toute la page */
    html { scroll-behavior: smooth; }
    
    /* line-clamp pour couper le texte s'il est trop long */
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
</body>
</html>