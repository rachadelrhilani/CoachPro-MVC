<div class="min-h-screen flex">
    <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">

        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://plus.unsplash.com/premium_photo-1726743771000-2d4eb988013f?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');"></div>
        

        <div class="absolute inset-0 bg-gradient-to-br from-indigo-900/80 via-purple-900/70 to-indigo-900/80"></div>
        

        <div class="absolute top-0 left-0 w-full h-full opacity-5">
            <div class="absolute top-20 left-20 w-72 h-72 bg-white rounded-full blur-3xl"></div>
            <div class="absolute bottom-20 right-20 w-96 h-96 bg-white rounded-full blur-3xl"></div>
        </div>
        
        <div class="relative z-10 flex flex-col justify-center items-center w-full p-12 text-white">

            <div class="mb-8">
                <div class="w-20 h-20 bg-white/20 backdrop-blur-lg rounded-2xl flex items-center justify-center shadow-2xl">
                    <span class="text-4xl font-bold">C</span>
                </div>
            </div>
            
           
            <div class="mb-8 relative">
                <div class="w-96 h-96 bg-white/10 backdrop-blur-md rounded-3xl flex items-center justify-center shadow-2xl border border-white/20">
                    <svg class="w-48 h-48 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                    </svg>
                </div>
            </div>
            
            
            <div class="text-center max-w-md">
                <h1 class="text-4xl font-bold mb-4">Rejoignez CoachPro</h1>
                <p class="text-lg text-white/90 leading-relaxed">
                    Créez votre compte et commencez votre parcours sportif avec les meilleurs coachs.
                </p>
            </div>
            

            <div class="mt-12 grid grid-cols-3 gap-8 text-center">
                <div>
                    <div class="text-3xl font-bold mb-1">500+</div>
                    <div class="text-sm text-white/80">Coachs experts</div>
                </div>
                <div>
                    <div class="text-3xl font-bold mb-1">10k+</div>
                    <div class="text-sm text-white/80">Séances</div>
                </div>
                <div>
                    <div class="text-3xl font-bold mb-1">98%</div>
                    <div class="text-sm text-white/80">Satisfaction</div>
                </div>
            </div>
        </div>
    </div>

    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-[#fdfdff] relative overflow-y-auto">
    
    <div class="w-full max-w-md relative z-10 py-10">
        <div class="lg:hidden flex justify-center mb-8">
            <div class="w-16 h-16 bg-gradient-to-tr from-indigo-600 to-purple-600 rounded-[1.5rem] flex items-center justify-center shadow-xl rotate-3">
                <span class="text-white text-3xl font-black italic">C</span>
            </div>
        </div>

        <div class="mb-10 text-center lg:text-left">
            <h2 class="text-4xl font-black text-slate-900 tracking-tight mb-3">Créer un compte</h2>
            <p class="text-slate-500 font-medium italic">Commencez votre aventure CoachPro dès aujourd'hui.</p>
        </div>

        {% if error %}
            <div class="mb-8 p-4 bg-red-50 border-2 border-red-100 rounded-2xl flex items-center gap-3 animate-shake">
                <div class="bg-red-500 rounded-full p-1 text-white flex-shrink-0">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12" stroke-width="3"/></svg>
                </div>
                <p class="text-sm text-red-700 font-bold">{{ error }}</p>
            </div>
        {% endif %}

        <form method="POST" action="{{ base_url }}/register" class="space-y-6">
            <input type="hidden" name="_csrf" value="{{ csrf_token }}">
            
            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2 group">
                    <label class="text-[10px] font-black uppercase text-slate-400 tracking-widest ml-1 group-focus-within:text-indigo-600 transition-colors">Nom</label>
                    <input name="nom" type="text" required 
                        class="block w-full px-5 py-4 bg-white border-2 border-slate-100 rounded-[1.2rem] text-slate-700 font-bold placeholder-slate-300 focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50/50 transition-all shadow-sm"
                        placeholder="Doe">
                </div>
                <div class="space-y-2 group">
                    <label class="text-[10px] font-black uppercase text-slate-400 tracking-widest ml-1 group-focus-within:text-indigo-600 transition-colors">Prénom</label>
                    <input name="prenom" type="text" required 
                        class="block w-full px-5 py-4 bg-white border-2 border-slate-100 rounded-[1.2rem] text-slate-700 font-bold placeholder-slate-300 focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50/50 transition-all shadow-sm"
                        placeholder="John">
                </div>
            </div>

            <div class="space-y-2 group">
                <label class="text-[10px] font-black uppercase text-slate-400 tracking-widest ml-1 group-focus-within:text-indigo-600 transition-colors">Email</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-slate-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/></svg>
                    </div>
                    <input type="email" name="email" required 
                        class="block w-full pl-12 pr-4 py-4 bg-white border-2 border-slate-100 rounded-[1.2rem] text-slate-700 font-bold placeholder-slate-300 focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50/50 transition-all shadow-sm"
                        placeholder="john@example.com">
                </div>
            </div>

            <div class="space-y-2 group">
                <label class="text-[10px] font-black uppercase text-slate-400 tracking-widest ml-1 group-focus-within:text-indigo-600 transition-colors">Mot de passe</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-slate-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                    </div>
                    <input type="password" name="password" required 
                        class="block w-full pl-12 pr-4 py-4 bg-white border-2 border-slate-100 rounded-[1.2rem] text-slate-700 font-bold placeholder-slate-300 focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50/50 transition-all shadow-sm"
                        placeholder="••••••••">
                </div>
            </div>

            <div class="space-y-3">
                <label class="text-[10px] font-black uppercase text-slate-400 tracking-widest ml-1">Je suis un...</label>
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-slate-400 group-hover:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                    </div>
                    <select name="role" id="role" required 
                        class="block w-full pl-12 pr-10 py-4 bg-white border-2 border-slate-100 rounded-[1.2rem] text-slate-700 font-bold focus:outline-none focus:border-indigo-500 appearance-none cursor-pointer shadow-sm transition-all">
                        <option value="sportif">Sportif</option>
                        <option value="coach">Coach</option>
                    </select>
                    <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7" stroke-width="3"/></svg>
                    </div>
                </div>
            </div>

            <div id="coach-fields" class="hidden transform transition-all duration-500 -translate-y-4">
                <div class="bg-indigo-50/50 rounded-[2rem] p-6 border-2 border-indigo-100 space-y-5">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="bg-indigo-600 rounded-lg p-1.5 text-white">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2.5"/></svg>
                        </div>
                        <span class="text-sm font-black text-indigo-900 uppercase tracking-tight">Détails professionnels</span>
                    </div>
                    
                    <div class="space-y-4">
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-indigo-400 uppercase tracking-widest ml-1">Discipline</label>
                            <input name="discipline" type="text" placeholder="ex: CrossFit, Boxe..."
                                class="w-full px-5 py-3 bg-white border-none rounded-xl font-bold text-slate-700 focus:ring-2 focus:ring-indigo-500 transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-indigo-400 uppercase tracking-widest ml-1">Expérience (ans)</label>
                            <input name="experience" type="number" min="1"
                                class="w-full px-5 py-3 bg-white border-none rounded-xl font-bold text-slate-700 focus:ring-2 focus:ring-indigo-500 transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-indigo-400 uppercase tracking-widest ml-1">Description</label>
                            <textarea name="description" rows="3" placeholder="Votre expertise en quelques mots..."
                                class="w-full px-5 py-3 bg-white border-none rounded-xl font-medium text-slate-600 focus:ring-2 focus:ring-indigo-500 transition-all resize-none"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="w-full py-5 bg-slate-900 text-white rounded-[1.2rem] text-sm font-black uppercase tracking-[0.2em] shadow-xl shadow-slate-200 hover:bg-indigo-600 hover:shadow-indigo-200 hover:-translate-y-1 active:scale-95 transition-all duration-300 flex justify-center items-center gap-3 group">
                S'inscrire
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-width="2.5"/></svg>
            </button>
        </form>

        <div class="mt-10 p-6 bg-slate-50/80 rounded-[2rem] border border-slate-100 text-center">
            <p class="text-sm text-slate-500 font-medium">
                Vous avez déjà un compte ? 
                <a href="{{ base_url }}/login" class="text-indigo-600 font-black hover:underline ml-1">Se connecter</a>
            </p>
        </div>
    </div>
</div>


<script src="https://cdn.tailwindcss.com"></script>
<script src="{{ base_url }}/assets/js/validation.js"></script>