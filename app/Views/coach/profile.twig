{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-6">Mon profil</h1>

    <form method="POST" action="/coach/profile/update" class="space-y-4">
        <div>
            <label>Nom</label>
            <input type="text" name="nom" value="{{ coach.nom }}" class="w-full border p-2 rounded">
        </div>

        <div>
            <label>Prénom</label>
            <input type="text" name="prenom" value="{{ coach.prenom }}" class="w-full border p-2 rounded">
        </div>

        <div>
            <label>Discipline</label>
            <input type="text" name="discipline" value="{{ coach.discipline }}" class="w-full border p-2 rounded">
        </div>

        <div>
            <label>Années d’expérience</label>
            <input type="number" name="annees_experience" value="{{ coach.annees_experience }}" class="w-full border p-2 rounded">
        </div>

        <div>
            <label>Description</label>
            <textarea name="description" class="w-full border p-2 rounded">{{ coach.description }}</textarea>
        </div>

        <button class="bg-indigo-600 text-white px-4 py-2 rounded">
            Mettre à jour
        </button>
    </form>
</div>
</body>
</html>
