{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="min-h-screen bg-slate-50/50 py-16 px-6">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-[2.5rem] shadow-2xl shadow-slate-200/60 overflow-hidden border border-white">
            
            <div class="h-40 bg-gradient-to-br from-slate-900 to-indigo-900 relative">
                <div class="absolute -bottom-10 left-10">
                    <div class="w-24 h-24 bg-white rounded-3xl p-1.5 shadow-xl">
                        <div class="w-full h-full bg-indigo-600 rounded-[1.2rem] flex items-center justify-center text-white text-3xl font-black">
                            {{ coach.prenom|slice(0,1) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-16 pb-12 px-10">
                <div class="mb-10">
                    <h1 class="text-3xl font-black text-slate-800">Éditer le profil</h1>
                    <p class="text-slate-500">Mettez à jour vos informations pour attirer plus de sportifs.</p>
                </div>

                <form method="POST" action="{{ base_url }}/coach/profile/update" class="space-y-8">
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1">Nom</label>
                            <input type="text" name="nom" value="{{ coach.nom }}" 
                                class="w-full px-5 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 transition-all outline-none font-bold text-slate-700">
                        </div>

                        <div class="space-y-2">
                            <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1">Prénom</label>
                            <input type="text" name="prenom" value="{{ coach.prenom }}" 
                                class="w-full px-5 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 transition-all outline-none font-bold text-slate-700">
                        </div>

                        <div class="space-y-2">
                            <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1">Discipline</label>
                            <input type="text" name="discipline" value="{{ coach.discipline }}" 
                                class="w-full px-5 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 transition-all outline-none font-bold text-slate-700">
                        </div>

                        <div class="space-y-2">
                            <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1">Années d’expérience</label>
                            <input type="number" name="annees_experience" value="{{ coach.annees_experience }}" 
                                class="w-full px-5 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 transition-all outline-none font-bold text-slate-700">
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1">Description professionnelle</label>
                        <textarea name="description" rows="4" 
                            class="w-full px-5 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 transition-all outline-none font-medium text-slate-600 leading-relaxed">{{ coach.description }}</textarea>
                    </div>

                    <button class="w-full py-5 bg-slate-900 text-white font-bold rounded-2xl hover:bg-indigo-600 hover:shadow-xl hover:shadow-indigo-100 transition-all duration-300">
                        Sauvegarder les changements
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>