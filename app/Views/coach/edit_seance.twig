{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<div class="min-h-screen bg-slate-50/50 py-16 px-4">
    <div class="max-w-xl mx-auto">
        
        <a href="{{ base_url }}/coach/seances" class="inline-flex items-center text-sm font-bold text-slate-400 hover:text-indigo-600 mb-6 transition-colors group">
            <svg class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15 19l-7-7 7-7" stroke-width="2.5"/></svg>
            Retour aux séances
        </a>

        <div class="bg-white rounded-[2.5rem] shadow-2xl shadow-indigo-100/50 overflow-hidden border border-white relative">
            
            <div class="h-2 w-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"></div>

            <div class="p-8 md:p-12">
                <div class="mb-10 text-center">
                    <div class="w-16 h-16 bg-indigo-50 rounded-2xl flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h1 class="text-3xl font-black text-slate-800 tracking-tight">Modifier la séance</h1>
                    <p class="text-slate-500 text-sm mt-2">Ajustez les détails de votre créneau horaire.</p>
                </div>

                <form method="POST" action="{{ base_url }}/coach/seances/update/{{ seance.id_seance }}" class="space-y-6">
                    <input type="hidden" name="id_seance" value="{{ seance.id_seance }}">

                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1 flex items-center">
                            <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2.5"/></svg>
                            Date de la séance
                        </label>
                        <input type="date" name="date_seance" value="{{ seance.date_seance }}"
                               class="w-full px-5 py-4 bg-slate-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50 transition-all outline-none font-bold text-slate-700">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1 flex items-center">
                                <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 8v4l3 3" stroke-width="2.5"/></svg>
                                Heure
                            </label>
                            <input type="time" name="heure" value="{{ seance.heure }}"
                                   class="w-full px-5 py-4 bg-slate-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50 transition-all outline-none font-bold text-slate-700">
                        </div>

                        <div class="space-y-2">
                            <label class="text-xs font-black uppercase text-slate-400 tracking-widest ml-1 flex items-center">
                                <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-width="2.5"/></svg>
                                Durée (min)
                            </label>
                            <input type="number" name="duree" value="{{ seance.duree }}"
                                   class="w-full px-5 py-4 bg-slate-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-50 transition-all outline-none font-bold text-slate-700">
                        </div>
                    </div>

                    <div class="pt-6 flex flex-col gap-3">
                        <button class="w-full py-5 bg-indigo-600 text-white font-black rounded-2xl shadow-lg shadow-indigo-200 hover:bg-indigo-700 hover:shadow-indigo-300 hover:-translate-y-1 active:scale-95 transition-all duration-300">
                            Mettre à jour la séance
                        </button>
                        
                        <a href="{{ base_url }}/coach/seances" class="w-full py-4 bg-slate-50 text-slate-400 text-center font-bold rounded-2xl hover:bg-slate-100 transition-colors">
                            Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>