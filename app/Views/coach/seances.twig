{% include 'partials/header.twig' %}
{% include 'partials/nav.twig' %}

<h2 class="text-xl font-bold mb-4">Créer une séance</h2>

<form method="POST" action="{{ base_url }}/coach/seances/create" class="grid grid-cols-4 gap-4 mb-8">
    <input type="date" name="date_seance" required class="border p-2 rounded">
    <input type="time" name="heure" required class="border p-2 rounded">
    <input type="number" name="duree" placeholder="Durée (min)" required class="border p-2 rounded">

    <button class="bg-green-600 text-white rounded px-4">
        Ajouter
    </button>
</form>

<div class="max-w-6xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Mes séances</h1>

    {% if seances is empty %}
        <p class="text-gray-500">Aucune séance créée.</p>
    {% else %}
        <table class="w-full border-collapse border">
            <thead class="bg-gray-100">
                <tr>
                    <th class="border p-2">Date</th>
                    <th class="border p-2">Heure</th>
                    <th class="border p-2">Durée (min)</th>
                    <th class="border p-2">Statut</th>
                    <th class="border p-2">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for seance in seances %}
                    <tr>
                        <td class="border p-2">{{ seance.date_seance }}</td>
                        <td class="border p-2">{{ seance.heure }}</td>
                        <td class="border p-2">{{ seance.duree }}</td>
                        <td class="border p-2">
                            {% if seance.statut == 'disponible' %}
                                <span class="text-green-600 font-semibold">Disponible</span>
                            {% else %}
                                <span class="text-red-600 font-semibold">Réservée</span>
                            {% endif %}
                        </td>
                        <td class="border p-2">
                            {% if seance.statut == 'disponible' %}
<form method="POST"
      action="{{ base_url }}/coach/seances/delete"
      onsubmit="return confirm('Supprimer cette séance ?')">

    <input type="hidden" name="id_seance" value="{{ seance.id_seance }}">
    <button class="text-red-600 hover:underline">
        Supprimer
    </button>
</form>
{% else %}
—
{% endif %}

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
</body>
</html>
